<div class="page-header"><h1>Edit bet</h1></div>

<% form_for(bet, {action: path_to.bet(bet), method: 'PUT', id: "bet_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('bets/form.ejs', {locals: {form: form, bet: bet}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update bet', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.bet(bet), {class: 'btn'}) %>
    </div>
<% });%>