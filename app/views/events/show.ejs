<div class="page-header">
    <h1>Details of event</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>title</th><td><%= event.title %></td></tr>
        <tr><th>description</th><td><%= event.description %></td></tr>
        <tr><th>status</th><td><%= event.status %></td></tr>
        <tr><th>red_gambler</th><td><%= event.red_gambler %></td></tr>
        <tr><th>red_follower</th><td><%= event.red_follower %></td></tr>
        <tr><th>red_stake</th><td><%= event.red_stake %></td></tr>
        <tr><th>blue_gambler</th><td><%= event.blue_gambler %></td></tr>
        <tr><th>blue_follower</th><td><%= event.blue_follower %></td></tr>
        <tr><th>blue_stake</th><td><%= event.blue_stake %></td></tr>
        <tr><th>owner</th><td><%= event.owner %></td></tr>
        <tr><th>follower</th><td><%= event.follower %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_event(event), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.event(event), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.events()) %>
</div>