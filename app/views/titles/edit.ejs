<div class="page-header"><h1>Edit title</h1></div>

<% form_for(title, {action: path_to.title(title), method: 'PUT', id: "title_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('titles/form.ejs', {locals: {form: form, title: title}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update title', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.title(title), {class: 'btn'}) %>
    </div>
<% });%>